#include<stdio.h>
#include<math.h>
int fact(int x)
{
	int i,fact=1;
	for(i=1;i<=x;i++)
	{
		fact=fact*i;
	}
	return fact;
}
int main()
{
	float x,y,sum=0;
	int i,j,limit;
	printf("enter value of x of cosx series:\n");
	scanf("%f",&x);
	printf("enter the limit up to which you want to expand series:\n");
	scanf("%d",&limit);
	y=x;
	x=x*(3.1415/180);
	for(i=1,j=0;i<=limit;i++,j++)
	{
		if(i%2==0)
		{
		    sum=sum-pow(x,i)/fact(i);
	    }
		else
		{
			sum=sum+pow(x,i)/fact(i);
		}
	}
printf("cos(%0.1f): %f",y,sum);
return 0;
}
